* {
    font:   "JetBrainsMono Nerd Font Medium 10";

    background:		#2e3440;
    foreground:		#d8dee9;
    accent-color:	#5e81ac;
    urgent:		#bf616a;

    red:		#fb4934;
    green:		#b8bb26;
    yellow:		#fabd2f;
    blue:		#83a598;
    purple:		#d3869b;
    orange:		#fe8019;
    gray:		#928374;

    background-color:   transparent;
    text-color:         @foreground;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    background-color:   @background;
    border-color:       @accent-color;

    location:   center;
    width:      480px;
    border:     1px;
}

inputbar {
    padding:    8px 12px;
    spacing:    12px;
    children:   [ prompt, entry ];
}

prompt, entry, element-text, element-icon {
    vertical-align: 0.5;
}

prompt {
    text-color: @accent-color;
}

listview {
    lines:      8;
    columns:    1;

    fixed-height:   false;
}

element {
    padding:    8px;
    spacing:    8px;
}

element normal urgent {
    text-color: @background;
}

element normal active {
    text-color: @accent-color;
}

element selected {
    text-color: @background;
}

element selected normal {
    background-color:   @accent-color;
}

element selected urgent {
    background-color:   @urgent;
}

element selected active {
    background-color:   @background;
}

element-icon {
    size:   0.75em;
}

element-text {
    text-color: inherit;
}
